#!/bin/bash

if [ $# -eq 0 ]; then
    echo "Usage: omarchy-launch-localhost <port>"
    echo "Example: omarchy-launch-localhost 3000"
    exit 1
fi

port=$1

if ! [[ "$port" =~ ^[0-9]+$ ]]; then
    echo "Error: Port must be a number"
    exit 1
fi

exec omarchy-launch-webapp "http://localhost:$port"
